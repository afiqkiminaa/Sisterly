<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define solid background color -->
    <solid android:color="#FFFFF7" />

    <!-- Define the border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFF7" />

    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
