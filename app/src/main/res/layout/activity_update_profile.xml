<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity"
    android:background="#FFDEDE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVUpdateProfile"
            android:layout_marginTop="30dp"
            android:text="You can update your profile details now"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVUpdateProfileName"
            android:layout_below="@id/TVUpdateProfile"
            android:text="Username"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/ETUpdateProfileName"
            android:layout_width="351dp"
            android:layout_height="48dp"
            android:layout_below="@id/TVUpdateProfileName"
            android:background="@drawable/button_layout"
            android:hint="Enter new username"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TVUpdateProfileMobile"
            android:layout_below="@id/ETUpdateProfileName"
            android:text="Mobile no."
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#555555"/>

        <EditText
            android:layout_width="351dp"
            android:layout_height="48dp"
            android:id="@+id/ETUpdateProfileMobile"
            android:layout_below="@id/TVUpdateProfileMobile"
            android:background="@drawable/button_layout"
            android:inputType="phone"
            android:padding="6dp"
            android:textSize="16sp"
            android:hint="Enter Mobile no. eg. 0195214496"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnUpdateProfile"
            android:text="Update Profile"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:backgroundTint="#F46847"
            android:layout_below="@id/ETUpdateProfileMobile"/>

        <ProgressBar
            android:id="@+id/PprogressBar"
            android:layout_width="52dp"
            android:layout_height="58dp"
            android:layout_below="@id/ETUpdateProfileName"
            android:layout_alignStart="@+id/TVUpdateProfileMobile"
            android:layout_alignEnd="@+id/TVUpdateProfileMobile"
            android:layout_marginStart="149dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="150dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>


    </RelativeLayout>

</ScrollView>