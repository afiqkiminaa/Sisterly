<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDEDE">

    <TextView
        android:id="@+id/TVSignup"
        android:layout_width="125dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:fontFamily="serif"
        android:text="Sign Up"
        android:textColor="#F46847"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVFullName"
        android:layout_width="91dp"
        android:layout_height="21dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="Full Name*"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVSignup" />

    <TextView
        android:id="@+id/TVUsername"
        android:layout_width="91dp"
        android:layout_height="21dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="Username*"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETFullName" />

    <TextView
        android:id="@+id/TVEmail"
        android:layout_width="91dp"
        android:layout_height="21dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="Email*"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETUsername" />

    <TextView
        android:id="@+id/TVPassword"
        android:layout_width="91dp"
        android:layout_height="21dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="Password*"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETEmail" />

    <TextView
        android:id="@+id/ETPhoneNo"
        android:layout_width="166dp"
        android:layout_height="25dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:text="Phone Number*"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETPassword" />

    <EditText
        android:id="@+id/ETFullName"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_layout"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="  Enter your full name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVFullName" />

    <EditText
        android:id="@+id/ETUsername"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_layout"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="  Enter your username"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVUsername" />

    <EditText
        android:id="@+id/ETEmail"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_layout"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="  Enter your email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVEmail" />

    <RadioButton
        android:id="@+id/RBAgreement"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Agree to Photos's Terms of Service and Privacy Policy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETPhone" />

    <Button
        android:id="@+id/BtnRegister"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:backgroundTint="#F46847"
        android:text="REGISTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RBAgreement" />

    <EditText
        android:id="@+id/ETPhone"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_layout"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="  Enter your phone no eg.0195214496"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETPhoneNo" />

    <EditText
        android:id="@+id/ETPassword"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_layout"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="  Enter your password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVPassword" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="52dp"
        android:layout_height="58dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>